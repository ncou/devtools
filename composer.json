{
    "name": "chiron/devtools",
    "type": "composer-plugin",
    "description": "A Composer plugin to aid PHP library and application development.",
    "keywords": [
        "development",
        "plugin",
        "tools"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0 || ^8.1",
        "composer-plugin-api": "^2",
        "captainhook/captainhook": "^5.3",
        "captainhook/plugin-composer": "^5.3",
        "ramsey/conventional-commits": "^1.1",
        "hamcrest/hamcrest-php": "^2.0",
        "ergebnis/composer-normalize": "^2.22",
        "madewithlove/license-checker": "^0.10.0 || ^1.0",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-mockery": "^0.9.0",
        "psalm/plugin-phpunit": "^0.16.1",
        "chiron/coding-standard": "^3.0",
        "roave/security-advisories": "dev-latest",
        "symfony/filesystem": "^2.8.52 || ^3.4.35 || ^4.4 || ^5.0 || ^6.0",
        "symfony/process": "^2.8.52 || ^3.4.35 || ^4.4 || ^5.0 || ^6.0",
        "vimeo/psalm": "^4.4"
    },
    "require-dev": {
        "composer/composer": "^1.10.22 || ^2.0.13"
    },
    "autoload": {
        "psr-4": {
            "Chiron\\Dev\\Tools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Test\\Dev\\Tools\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "captainhook": {
            "force-install": true
        },
        "class": "Chiron\\Dev\\Tools\\Composer\\DevToolsPlugin"
    },
    "bin": [
        "bin/devtools"
    ],
    "scripts": {
        "test": "bin/devtools test:all"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
