{
    "name": "chiron/devtools",
    "description": "A Composer plugin to aid PHP library and application development.",
    "license": "MIT",
    "type": "composer-plugin",
    "keywords": [
        "development",
        "plugin",
        "tools"
    ],
    "require": {
        "php": "^8.0 || ^8.1",
        "composer-plugin-api": "^2",
        "captainhook/captainhook": "^5.10",
        "captainhook/plugin-composer": "^5.3",
        "chiron/coding-standard": "^3.0",
        "ergebnis/composer-normalize": "^2.22",
        "hamcrest/hamcrest-php": "^2.0",
        "madewithlove/license-checker": "^1.0",
        "mockery/mockery": "^1.4",
        "php-parallel-lint/php-console-highlighter": "^0.5",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-mockery": "^0.9",
        "psalm/plugin-phpunit": "^0.16",
        "ramsey/conventional-commits": "^1.3",
        "roave/security-advisories": "dev-latest",
        "symfony/process": "^5.1 || ^6.0",
        "vimeo/psalm": "^4.18"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Chiron\\Dev\\Tools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Tests\\Dev\\Tools\\": "tests/"
        }
    },
    "bin": [
        "bin/devtools"
    ],
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "captainhook/plugin-composer": true
        },
        "sort-packages": true
    },
    "extra": {
        "captainhook": {
            "force-install": true
        },
        "class": "Chiron\\Dev\\Tools\\Composer\\DevToolsPlugin"
    },
    "scripts": {
        "analyze": "php bin/devtools analyze:all",
        "lint": "php bin/devtools lint:all",
        "lint-fix": "php bin/devtools lint:fix",
        "test": "php bin/devtools test:all",
        "test-unit": "php bin/devtools test:unit"
    }
}
